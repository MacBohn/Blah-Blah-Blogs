<div class="textfield">
  <%= form_for @post do |f| %>
  <h2>Blogs</h2>
  <%= f.label :title %>
  <br>
  <%= collection_select(:post, :user_id, User.all, :id, :name, {include_blank: "Please choose a category" },{class: "form-control"}) %>
  <br><br>

  <br>
  <%= f.text_area :body , class:"textbox"  %>
  <br><br>
  <%= f.submit "Submit", class: "css_button" %>

<% end %>

</div>
