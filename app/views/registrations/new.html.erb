<div class= "textfield">
  <%= form_for(@user, url: sign_up_path) do |f| %>
  <h2>Sign Up</h2>
  <%= f.label :name %>
  <br>
  
  <%= f.text_field :name, class:"textbox" %>
  <br><br>
  <%= f.label :nickname %>
  <br>
  <%= f.text_field :nickname  ,class:"textbox" %>
  <br><br>
  <%= f.label :password %>
  <br>
  <%= f.password_field :password  ,class:"textbox" %>
  <br><br>
  <%= f.label :password_confirmation %>
  <br>
  <%= f.password_field :password_confirmation ,class:"textbox" %>
  <br><br>
  <%= f.submit "Submit", class: "css_button" %>
  <% end %>
</div>
