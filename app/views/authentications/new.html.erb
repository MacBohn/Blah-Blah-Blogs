<div class= "textfield">
  <%= form_for @user, url: signin_path do |f| %>

    <h2>Sign In </h2>
    <%= f.label :nickname %>
    <br>
    <%= f.text_field :nickname, class: "textbox" %>
    <br><br>
    <%= f.label :password %>
    <br>
    <%= f.password_field :password, class: "textbox" %>
    <br><br>
    <%= f.submit "Submit", class: "css_button" %>
  <% end %>
  <h2>Or</h2>
  <h2><%= button_to "Sign In with Twitter", "/auth/twitter", :id => "sign", :method => :post %></h2>
</div>
