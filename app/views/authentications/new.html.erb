<div class= "textfield">
  <%= form_tag('/sign-in') do %>
    <h2>Sign In </h2>
    <%= label_tag :nickname %>
    <br>
    <%= text_field_tag :nickname, nil, class: "textbox" %>
    <br><br>
    <%= label_tag :password %>
    <br>
    <%= password_field_tag :password, nil, class: "textbox" %>
    <br><br>
    <%= submit_tag "Submit", class: "css_button" %>
  <% end %>
  <h2>Or</h2>
  <h2><%= link_to "Sign In with Twiter", "/auth/twitter" %></h2>
</div>
